 <!--  根据条件产看日志信息 -->
<select id="selectOperationByCondition" resultMap="BaseResultMap">
  select * from operation
  <where>
     <if test="operationIp != null">
       and operation_ip=#{operationIp}               
      </if>
     <if test="userName != null">
        and  user_name=#{userName}
      </if>
      <if test="null!=goodsName and ''!=goodsName ">
				and g.goods_name like concat("%",#{goodsName},"%")
				<!-- and g.goods_name= #{goodsName} -->
	</if>
        <if test="beginTime != null">
        <![CDATA[
       and  s.sell_outbound_time >= #{beginTime}
       ]]>
     </if>
        <if test="endTime != null">
        <![CDATA[
       and  s.sell_outbound_time <= #{endTime}
       ]]>
      </if>
        <if test="operationTime != null">
      and  operation_time=#{operationTime,jdbcType=TIMESTAMP}
      </if>
  </where>
</select>

